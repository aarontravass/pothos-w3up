{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "preserveSymlinks": true                       /* Skip type checking all .d.ts files. */
  },
  "exclude": ["node_modules"]
}
